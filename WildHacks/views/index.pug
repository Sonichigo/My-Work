doctype=html

html
   head
      title Animal-Pedia
      link(rel='icon', href='favicon.png')
      style.
            body {
                font-family: Verdana;
                font-size: 20px;
                background: url('https://images.clipartlogo.com/files/istock/previews/1066/106645593-horizontal-seamless-background-with-forest.jpg');
                background-repeat: no-repeat;
                background-size: cover; 
                margin:auto;
            }
            h1 {
               color:white;
               background: #1a1a1a;
               width:100%;
               height:50px;
            }
            table {
               color:white;
               font-Weight:bold;
               background:#1a1a1a;
               opacity:0.9;
            }
            a {
               background:black;
               color:white;
               padding:5px;
               font-family: Opensans;
               font-size:15px;
               display: inline-flex;
               justify-content: space-evenly;
            }
   body
    h1(align='center') Animal-Pedia
    div(align='center') 
      a(class='button' href='/AddNew') Add Data
      a(class='button' href='/') View Data
      a(class='button' href='/Update') ReGenerate Data
    br
    br
    table(style='width:90%', border='.1',align='center')
      tr
         th NAME
         th CATEGORY
         th HABITAT
         th COUNT
      each val in animal
         tr(align='center')
            td #{val.name} 
            td #{val.category}
            td #{val.habitat}
            td #{val.count}
      